<!-- section 1 -->
<section class="py-8 bg-white border-b">
  <div class="container max-w-5xl m-8 mx-auto">
    <h1 class="w-full my-2 text-5xl font-bold leading-tight text-center text-gray-darker"><%= gettext("Tired of") %></h1>
    <div class="w-full mb-4">
      <div class="w-64 h-1 py-0 mx-auto my-0 rounded-t opacity-25 gradient"></div>
    </div>
    <div class="flex flex-wrap">
      <!--Left Col-->
      <div class="w-5/6 p-6 mt-6 sm:w-1/2">
        <h3 class="mt-6 mb-3 text-3xl font-bold leading-none text-gray-darker"><%= gettext("Writing the same permits every day") %></h3>
        <p class="text-gray-dark">
          <%= gettext("Keeping track of numbering, remembering all the names, checking the same boxes over and over again") %><br /><br />
        </p>
      </div>
      <!--right Col-->
      <div class="w-full p-6 sm:w-1/2">
        <%= img_tag(Routes.static_path(@conn, "/images/multitasking.svg"), class: "w-5/6 sm:h-64 p-6 mt-6") %>
      </div>
    </div>
    <!--left Col-->
    <div class="flex flex-row-reverse flex-wrap">	
      <div class="w-full p-6 mt-6 sm:w-1/2">
        <div class="align-middle">
          <h3 class="mt-6 mb-3 text-3xl font-bold leading-none text-gray-darker"><%= gettext("Let the computer do the job for you") %></h3>
          <p class="text-gray-dark"><%= gettext("With a few mouse clicks you can have ready made  work permits. With name auto completion, auto-numbering and custom templates") %></p>
        </div>
      </div>
      <!--right Col-->
      <div class="w-full p-6 sm:w-1/2">
        <%= img_tag(Routes.static_path(@conn, "/images/checking_boxes.svg"), class: "w-5/6 sm:h-64 p-6 mt-6") %>
      </div>
    </div>
    <!--Left Col-->
    <div class="flex flex-wrap">	
      <div class="w-5/6 p-6 mt-6 sm:w-1/2">
        <h3 class="mt-6 mb-3 text-3xl font-bold leading-none text-gray-darker"><%= gettext("Keep track who is still working") %></h3>
        <p class="text-gray-dark">
          <%= gettext("How long will it take to finish. When you need to check if it's done correctly") %><br /><br />
        </p>
      </div>
      <!--right Col-->
      <div class="w-full p-6 sm:w-1/2">
        <%= img_tag(Routes.static_path(@conn, "/images/in_sync.svg"), class: "w-5/6 sm:h-64 p-6 mt-6") %>
      </div>
    </div>
    </div>
  </div>
</section>
