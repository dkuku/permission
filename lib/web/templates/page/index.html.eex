<!--Hero-->
<div class="pt-24">
  <div class="container flex flex-col flex-wrap items-center px-3 mx-auto md:flex-row">
    <!--Left Col-->
    <div class="flex flex-col items-start justify-center w-full text-center md:text-left md:w-2/5">
      <p class="w-full uppercase tracking-loose">
        <h1 class="my-4 text-5xl font-bold leading-tight">
          <%= gettext("Workpermit tracker") %>
        </h1>
        <p class="mb-8 text-2xl leading-normal">
          <%= gettext("Create and track your workpermits in an dedicated app") %>
        </p>
        <%= link to: Routes.pow_registration_path(@conn, :new) do %>
          <button class="px-8 py-4 mx-auto my-6 font-bold bg-white rounded-full shadow-lg hover:underline lg:mx-0 text-gray-darker">
            <%= gettext("Sign up") %>
          </button>
        <% end %>
    </div>
    <!--Right Col-->
    <div class="w-full py-6 text-center md:w-3/5">
      <%= img_tag(Routes.static_path(@conn, "/images/engineer.svg"), class: "w-full md:w-4/5 mirror") %>
    </div>
  </div>
</div>
