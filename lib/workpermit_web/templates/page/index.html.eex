<!-- section 1 -->
<section class="bg-white border-b py-8 bg-white">
  <div class="container m-8 max-w-5xl mx-auto">
    <h1 class="font-bold leading-tight my-2 text-5xl text-center text-gray-darker w-full"><%= gettext("Tired of:") %></h1>
    <div class="mb-4 w-full">
      <div class="gradient h-1 mx-auto my-0 opacity-25 py-0 rounded-t w-64"></div>
    </div>
    <div class="flex flex-wrap">
      <!--Left Col-->
      <div class="mt-6 p-6 sm:w-1/2 w-5/6">
        <h3 class="text-3xl text-gray-darker font-bold leading-none mb-3 mt-6"><%= gettext("Writing the same permits every day") %></h3>
        <p class="text-gray-dark">
          <%= gettext("Keeping track of numbering, remembering all the names, checking the same boxes over and over again") %><br /><br />
        </p>
      </div>
      <!--right Col-->
      <div class="w-full sm:w-1/2 p-6">
        <%= img_tag(Routes.static_path(@conn, "/images/multitasking.svg"), class: "w-5/6 sm:h-64 p-6 mt-6") %>
      </div>
    </div>
    <!--left Col-->
    <div class="flex flex-wrap flex-row-reverse">	
      <div class="mt-6 p-6 sm:w-1/2 w-full">
        <div class="align-middle">
          <h3 class="font-bold leading-none mb-3 mt-6 text-3xl text-gray-darker"><%= gettext("Let the computer do the job for you") %></h3>
          <p class="text-gray-dark"><%= gettext("With a few mouse clicks you can have ready made  work permits. With name auto completion, auto-numbering and custom templates") %></p>
        </div>
      </div>
      <!--right Col-->
      <div class="w-full sm:w-1/2 p-6">
        <%= img_tag(Routes.static_path(@conn, "/images/checking_boxes.svg"), class: "w-5/6 sm:h-64 p-6 mt-6") %>
      </div>
    </div>
    <!--Left Col-->
    <div class="flex flex-wrap">	
      <div class="mt-6 p-6 sm:w-1/2 w-5/6">
        <h3 class="font-bold leading-none mb-3 mt-6 text-3xl text-gray-darker"><%= gettext("Keep track who is still working") %></h3>
        <p class="text-gray-dark">
          <%= gettext("How long will it take to finish. When you need to check if it's done correctly") %><br /><br />
        </p>
      </div>
      <!--right Col-->
      <div class="p-6 sm:w-1/2 w-full">
        <%= img_tag(Routes.static_path(@conn, "/images/in_sync.svg"), class: "w-5/6 sm:h-64 p-6 mt-6") %>
      </div>
    </div>
    </div>
  </div>
</section>
