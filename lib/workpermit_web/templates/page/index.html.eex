<!--Hero-->
<div class="pt-24">
  <div class="container flex flex-col flex-wrap items-center md:flex-row mx-auto px-3">
    <!--Left Col-->
    <div class="flex flex-col items-start justify-center md:text-left md:w-2/5 text-center w-full">
      <p class="tracking-loose uppercase w-full">
        <h1 class="font-bold leading-tight my-4 text-5xl">
          <%= gettext("Workpermit tracker") %>
        </h1>
        <p class="leading-normal mb-8 text-2xl">
          <%= gettext("Create and track your workpermits in an dedicated app") %>
